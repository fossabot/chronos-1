{
  "name": "chronos",
  "description": "Browser Extension for visualizing web browsing activity",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://github.com/tohjustin/chronos#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/tohjustin/chronos.git"
  },
  "scripts": {
    "start": "cross-env REACT_APP_GIT_COMMIT_SHA=$(git rev-parse --short HEAD) react-app-rewired start",
    "start:chrome": "cross-env REACT_APP_BUILD_TARGET=chrome npm run start",
    "start:firefox": "cross-env REACT_APP_BUILD_TARGET=firefox npm run start",
    "start:chrome-debug": "REACT_APP_DEBUG_MODE=true npm run start:chrome",
    "start:firefox-debug": "REACT_APP_DEBUG_MODE=true npm run start:firefox",
    "build": "cross-env-shell REACT_APP_GIT_COMMIT_SHA=$(git rev-parse --short HEAD) INLINE_RUNTIME_CHUNK=false PUBLIC_URL=. \"react-app-rewired build && node pack-extension.js\"",
    "build:chrome": "cross-env REACT_APP_BUILD_TARGET=chrome npm run build",
    "build:firefox": "cross-env REACT_APP_BUILD_TARGET=firefox npm run build",
    "tsc": "tsc",
    "lint": "npm run lint:ts && npm run lint:scss",
    "lint:ts": "eslint --fix -- ./src/**/*.{ts,tsx}",
    "lint:scss": "stylelint --fix -- ./src/**/*.scss",
    "prettier": "prettier --write -- ./src/**/*.{ts,tsx}",
    "test": "cross-env TZ=America/Vancouver react-app-rewired test --watchAll=false",
    "test:debug": "cross-env TZ=America/Vancouver react-app-rewired --inspect test --no-cache --runInBand --watchAll=false",
    "test:watch": "cross-env TZ=America/Vancouver react-app-rewired test",
    "react-devtools": "react-devtools",
    "redux-devtools": "redux-devtools --hostname=localhost --port=8098"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{scss}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version"
  ],
  "dependencies": {
    "classnames": "2.2.6",
    "connected-react-router": "6.5.2",
    "d3": "5.12.0",
    "d3-interpolate-path": "2.1.1",
    "dexie": "2.0.4",
    "evergreen-ui": "4.21.2",
    "file-saver": "2.0.2",
    "history": "4.10.1",
    "lodash": "4.17.15",
    "luxon": "1.21.1",
    "react": "16.11.0",
    "react-countup": "4.2.3",
    "react-day-picker": "7.4.0",
    "react-dom": "16.11.0",
    "react-feather": "2.0.3",
    "react-redux": "7.1.3",
    "react-router": "5.1.2",
    "react-router-dom": "5.1.2",
    "react-transition-group": "4.3.0",
    "redux": "4.0.4",
    "redux-starter-kit": "1.0.1",
    "redux-thunk": "2.3.0",
    "reselect": "4.0.0",
    "resize-observer-polyfill": "1.5.1",
    "use-debounce": "3.1.0"
  },
  "devDependencies": {
    "@hot-loader/react-dom": "16.11.0",
    "@types/chrome": "0.0.91",
    "@types/classnames": "2.2.9",
    "@types/d3": "5.7.2",
    "@types/d3-interpolate-path": "2.0.0",
    "@types/file-saver": "2.0.1",
    "@types/firefox-webext-browser": "70.0.1",
    "@types/history": "4.7.3",
    "@types/jest": "23.3.14",
    "@types/lodash": "4.14.145",
    "@types/luxon": "1.15.2",
    "@types/node": "12.12.6",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.4",
    "@types/react-redux": "7.1.5",
    "@types/react-router": "5.1.2",
    "@types/react-router-dom": "5.1.2",
    "@types/react-transition-group": "4.2.3",
    "@types/webpack-env": "1.14.1",
    "@typescript-eslint/eslint-plugin": "2.3.3",
    "@typescript-eslint/parser": "2.3.3",
    "adm-zip": "0.4.13",
    "cross-env": "6.0.3",
    "eslint": "5.12.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.16.0",
    "eslint-plugin-react-hooks": "2.2.0",
    "husky": "3.0.9",
    "jest": "23.6.0",
    "lint-staged": "9.4.2",
    "node-sass": "4.13.0",
    "prettier": "1.18.2",
    "react-app-rewire-hot-loader": "2.0.1",
    "react-app-rewired": "2.1.4",
    "react-devtools": "4.2.0",
    "react-hot-loader": "4.12.16",
    "react-scripts": "2.1.8",
    "redux-devtools-cli": "0.0.1-1",
    "remote-redux-devtools": "0.5.16",
    "stylelint": "11.1.1",
    "stylelint-config-standard": "19.0.0",
    "stylelint-scss": "3.12.1",
    "ts-jest": "23.10.5",
    "typescript": "3.7.2",
    "write-file-webpack-plugin": "4.5.1"
  }
}
