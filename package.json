{
  "name": "chronos",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-app-rewired start",
    "start:chrome": "REACT_APP_BUILD_TARGET=CHROME react-app-rewired start",
    "start:firefox": "REACT_APP_BUILD_TARGET=FIREFOX react-app-rewired start",
    "build": "react-app-rewired build",
    "build:chrome": "REACT_APP_BUILD_TARGET=CHROME react-app-rewired build",
    "build:firefox": "REACT_APP_BUILD_TARGET=FIREFOX react-app-rewired build",
    "tsc": "tsc",
    "lint": "eslint --fix -- ./src/**/*.{js,jsx,ts,tsx}",
    "prettier": "prettier --write -- ./src/**/*.{js,jsx,ts,tsx}",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version"
  ],
  "dependencies": {
    "dexie": "2.0.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "redux": "4.0.1",
    "redux-devtools-extension": "2.13.8",
    "redux-thunk": "2.3.0",
    "typesafe-actions": "4.1.2",
    "typescript": "3.4.5",
    "utility-types": "3.5.0"
  },
  "devDependencies": {
    "@hot-loader/react-dom": "16.8.6",
    "@types/chrome": "0.0.83",
    "@types/firefox-webext-browser": "67.0.0",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.7",
    "@types/react": "16.8.14",
    "@types/react-dom": "16.8.4",
    "@types/webpack-env": "1.13.9",
    "@typescript-eslint/eslint-plugin": "1.7.0",
    "@typescript-eslint/parser": "1.7.0",
    "eslint": "5.12.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.12.4",
    "husky": "2.1.0",
    "lint-staged": "8.1.5",
    "prettier": "1.17.0",
    "react-app-rewire-hot-loader": "2.0.1",
    "react-app-rewired": "2.1.3",
    "react-hot-loader": "4.8.4",
    "react-scripts": "2.1.8",
    "write-file-webpack-plugin": "4.5.0"
  }
}
